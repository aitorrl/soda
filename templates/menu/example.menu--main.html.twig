{% macro menu_links(items, attributes, menu_level) %}
    {% import _self as menus %}
    {% if items %}
        {% include "@component-blocks/menu/menu.twig" with {menu: items, menu_level:menu_level} %}
    {% endif %}
{% endmacro %}